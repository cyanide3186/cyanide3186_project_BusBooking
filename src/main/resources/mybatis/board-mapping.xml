<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.board-Mapper">
	<insert id="insertBoard" parameterType="BoardVO">
		insert into board values(board_seq.nextval,#{subject},#{content},sysdate)
	</insert>
	<delete id="deleteBoard" parameterType="int">
		delete from board where board_no=#{board_no}
	</delete>
	<select id="selectBoard" parameterType="int" resultType="BoardVo">
		select *from board where board_no=#{board_no}
	</select>
	<select id="countBoard">
		select count(*)from board
	</select>
	<select id="pagingBoard" parameterType="map" resultType="BoardVO">
	<![CDATA[
		select board_no, subject, to_char(writeday, 'YYYY.MM.DD') as writeday from(select rownum rn, tt.* from (select * from board order by board_no desc) tt)where rn>=#{startNum} and rn<=#{endNum}
	]]>
	</select>
</mapper>