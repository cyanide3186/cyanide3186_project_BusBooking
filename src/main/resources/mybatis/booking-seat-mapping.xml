<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.seat-Mapper">
	
	<insert id="payment" parameterType="int">
		insert into seat values(#{bus_no},#{bus_seat},#{ticket_no})
	</insert>
	
	<!-- 예약 좌석 조회 -->
	<select id="seatCheck" parameterType="String" resultType="seatVO">
		select * from seat where ticket_no=#{ticket_no}
	</select>
	
	<update id="seatModify" parameterType="int" >
		update seat where bus_no=#{bus_no}, bus_seat=#{bus_seat}, state
	</update>
	
	<update id="clearseat" parameterType="String">
		update seat set ticket_no = null where bus_no=#{bus_no};
	</update>
	<!-- 버스 좌석 목록 조회 -->
	<select id="getSeatList" parameterType="String" resultType="seatVO">
		select * from seat where bus_no = #{bus_no}
	</select>
	
	<!-- 좌석 예약 상태로 변경 -->
	<update id="seatBooking" parameterType="seatVO">
		update seat set ticket_no = #{ticket_no}
		where bus_no = #{bus_no} and bus_seat = #{bus_seat}
	</update>
	
	<!-- 좌석 예약 취소 -->
	<update id="seatCancle" parameterType="seatVO">
		update seat set ticket_no = null 
		where bus_no = #{bus_no} and bus_seat = #{bus_seat}
	</update>
	
	<!-- 좌석 초기화 -->
	<update id="seatReset" parameterType="String">
		update seat set ticket_no = null 
		where bus_no = #{bus_no}
	</update>
	
</mapper>